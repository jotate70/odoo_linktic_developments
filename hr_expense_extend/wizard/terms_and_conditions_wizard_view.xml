<?xml version="1.0"?>
<odoo>
    <record model="ir.ui.view" id="terms_conditions_transition_wizard_view">
        <field name="name">terms_conditions_transition_wizard_view</field>
        <field name="model">terms_conditions_transition_wizard</field>
        <field name="arch" type="xml">
            <form string="Terms Conditions Transition">
                <group>
                    <group>
                        <field name="travel_request_id" invisible="1"/>
                        <field name="message_text" readonly="1"/>
                    </group>
                </group>
                <footer>
                    <button name="do_action" string="Aceptar" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
