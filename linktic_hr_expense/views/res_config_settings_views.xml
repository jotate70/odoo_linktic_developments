<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record model="ir.ui.view" id="res_config_settings_expense_inherit_advance">
        <field name="name">res.config.settings.expense.inherit.advance</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_expense.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='expenses_setting_container']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="expense_advance_account">
                    <div class="o_setting_right_pane">
                        <label for="hr_expense_advance_account" string="Advances Account"/>
                        <div class="content-group">
                            <div class="row mt16">
                                <label for="hr_expense_advance_account" class="col-lg-3 o_light_label"/>
                                <field name="hr_expense_advance_account"/>
                            </div>
                            <div class="row mt16">
                                <label for="hr_expense_advance_gain_account" class="col-lg-3 o_light_label"/>
                                <field name="hr_expense_advance_gain_account"/>
                                </div>
                            <div class="row mt16">
                                <label for="hr_expense_advance_loss_account" class="col-lg-3 o_light_label"/>
                                <field name="hr_expense_advance_loss_account"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
